/* USER CODE BEGIN Includes */
#include <stdlib.h>
volatile int  count;
int pos ;
float N = 13;
int precount;
float veloc;
float v1;
float v1Filt;
float v1Prev;
int vt = 100;
float e ;
float eI;
int u;
float kp = 1;
float ki = 10;
int dir;
int pwr;
/* USER CODE END Includes */

